<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/txt_sender_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer"
        android:textSize="10sp"
        android:textColor="#808080"
        app:layout_constraintStart_toStartOf="@+id/txt_receive_message"
        app:layout_constraintBottom_toTopOf="@+id/txt_receive_message"/>

    <TextView
        android:id="@+id/txt_receive_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_button"
        android:padding="10dp"
        android:text="Message"
        android:maxWidth="250dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_sender_name" />
</androidx.constraintlayout.widget.ConstraintLayout>
